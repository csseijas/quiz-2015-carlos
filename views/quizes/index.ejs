<div class="busqueda"><form method="get" action="/quizes" >
	<input type="text" placeholder="Pregunta a buscar" name="buscar"/>
	<input type="submit" class="buscar" value="Buscar">
</form></div>
<table>
<% var i; for (i=0; i < quizes.length; i++) { %>
	<tr><td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %><span class="reduce"> (<%= quizes[i].tematica %>)</span></a></td>
		<% if(session.user){ %>
	<td><a href="quizes/<%= quizes[i].id %>/edit"><button class="editar" >Editar</button></a></td>
	<td>
	<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
		<button type="submit" class="editar" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
		Borrar
		</button>
	</form>
	</td>
	</tr>
		<% } %>
<% } %>
</table>
<% if(session.user){ %>
<a href="/quizes/new"><button type="button" class="crear">Crear pregunta</button></a>
<% } %>